{
  "name": "mocker",
  "version": "1.0.0",
  "description": "data mocker",
  "main": "main.js",
  "scripts": {
    "test": "mocha",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "start": "electron .",
    "dev": "electron . --debug",
    "generate-test-report": "mocha --reporter=json > report.json",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tkiddo/mocker.git"
  },
  "keywords": [
    "mock",
    "electron"
  ],
  "author": "tkiddo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tkiddo/mocker/issues"
  },
  "homepage": "https://github.com/tkiddo/mocker#readme",
  "devDependencies": {
    "electron": "^11.0.3",
    "electron-builder": "^22.9.1",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^8.2.1",
    "puppeteer-core": "^5.5.0",
    "spectron": "^13.0.0"
  },
  "dependencies": {
    "express": "^4.17.1",
    "http-server": "^0.12.3",
    "mockjs": "^1.1.0"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  },
  "build": {
    "appId": "com.electron.mocker",
    "mac": {
      "category": "tools",
      "icon": "assets/app-icon/logo.png"
    },
    "win": {
      "icon": "assets/app-icon/logo.png"
    }
  }
}
